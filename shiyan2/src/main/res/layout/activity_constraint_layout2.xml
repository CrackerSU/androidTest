<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- 顶部应用标题 -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shiyan2"
        android:textColor="#9C27B0"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"/>

    <!-- 左上角：空间站图标 -->
    <ImageView
        android:id="@+id/spaceStationIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/space_station_icon"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="16dp"/>

    <!-- 中上位置：火箭图标 -->
    <ImageView
        android:id="@+id/rocketIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/rocket_icon"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"/>

    <!-- 右上角：探测车图标 -->
    <ImageView
        android:id="@+id/roverIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/rover_icon"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginRight="16dp"/>

    <!-- 标签栏容器 -->
    <LinearLayout
        android:id="@+id/tabContainer"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="80dp">

        <!-- Space Stations标签 -->
        <TextView
            android:id="@+id/tabSpaceStations"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Space Stations"
            android:textColor="#666666"
            android:textSize="16sp"
            android:background="#FFFFFF"/>

        <!-- Flights标签（当前选中） -->
        <TextView
            android:id="@+id/tabFlights"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Flights"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#FFFFFF"/>

        <!-- Rovers标签 -->
        <TextView
            android:id="@+id/tabRovers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Rovers"
            android:textColor="#666666"
            android:textSize="16sp"
            android:background="#FFFFFF"/>
    </LinearLayout>

    <!-- Flights标签下方的橙色下划线 -->
    <View
        android:id="@+id/tabIndicator"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#FF9800"
        app:layout_constraintTop_toBottomOf="@id/tabContainer"
        app:layout_constraintLeft_toLeftOf="@id/tabFlights"
        app:layout_constraintRight_toRightOf="@id/tabFlights"
        tools:ignore="NotSibling" />

    <!-- 地点选择区域 -->
    <TextView
        android:id="@+id/locationDCA"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="DCA"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tabIndicator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/arrowButton"
        android:layout_marginTop="40dp"
        android:layout_marginRight="8dp"/>

    <!-- 双向箭头按钮（位置保持不变） -->
    <ImageView
        android:id="@+id/arrowButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/double_arrows"
        android:background="#E0E0E0"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="@id/locationDCA"
        app:layout_constraintBottom_toBottomOf="@id/locationDCA"
        app:layout_constraintLeft_toRightOf="@id/locationDCA"
        app:layout_constraintRight_toLeftOf="@id/locationMARS"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <!-- 目的地 -->
    <TextView
        android:id="@+id/locationMARS"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="MARS"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/locationDCA"
        app:layout_constraintBottom_toBottomOf="@id/locationDCA"
        app:layout_constraintLeft_toRightOf="@id/arrowButton"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"/>

    <!-- One Way选项 -->
    <LinearLayout
        android:id="@+id/oneWayContainer"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FF9800"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/locationDCA"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/travellerContainer"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp">

        <!-- One Way文本 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One Way"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <!-- 白色圆点（选中指示器） -->
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/white_circle"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- 旅客数量 -->
    <TextView
        android:id="@+id/travellerContainer"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#FF9800"
        android:gravity="center"
        android:text="1 Traveller"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/oneWayContainer"
        app:layout_constraintBottom_toBottomOf="@id/oneWayContainer"
        app:layout_constraintLeft_toRightOf="@id/oneWayContainer"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"/>

    <!-- 中心区域：放置galaxy.png（原先放rocket的地方） -->
    <ImageView
        android:id="@+id/centerGalaxy"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/galaxy"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/oneWayContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/departButton"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>

    <!-- DEPART按钮 -->
    <Button
        android:id="@+id/departButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#9C27B0"
        android:text="DEPART"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>