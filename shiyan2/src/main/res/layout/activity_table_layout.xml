<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:background="#FFFFFF"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello TableLayout"
        android:textSize="24sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <TableRow
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_height="wrap_content"
            android:text="Open..."
            android:textColor="#000000"
            android:textSize="16sp"/>

        <TextView
            android:layout_height="wrap_content"
            android:text="Ctrl-O"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="end"/>
    </TableRow>

    <TableRow
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_height="wrap_content"
            android:text="Save..."
            android:textColor="#000000"
            android:textSize="16sp"/>

        <TextView
            android:layout_height="wrap_content"
            android:text="Ctrl-S"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="end"/>
    </TableRow>

    <TableRow
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_height="wrap_content"
            android:text="Save As..."
            android:textColor="#000000"
            android:textSize="16sp"/>

        <TextView
            android:layout_height="wrap_content"
            android:text="Ctrl-Shift-S"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="end"/>
    </TableRow>

    <TableRow
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_height="wrap_content"
            android:text="Import..."
            android:textColor="#000000"
            android:textSize="16sp"/>

        <TextView
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="end"/>
    </TableRow>

    <TableRow
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_height="wrap_content"
            android:text="Export..."
            android:textColor="#000000"
            android:textSize="16sp"/>

        <TextView
            android:layout_height="wrap_content"
            android:text="Ctrl-E"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="end"/>
    </TableRow>

    <TableRow
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_height="wrap_content"
            android:text="Quit"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <TextView
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="end"/>
    </TableRow>

</TableLayout>